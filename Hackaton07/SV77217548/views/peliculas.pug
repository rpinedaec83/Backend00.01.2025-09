doctype html
html
  head
    meta(charset="utf-8")
    title Top de películas
    link(rel="stylesheet", href="/styles.css")
  body
    h1 Top de películas

    p
      a(href="/") ← Volver al inicio

    if error
      p.error= error
    else if movies && movies.results && movies.results.length
      p
        | Página 
        strong= movies.page
        |  de 
        strong= movies.total_pages
        |  — Total películas: 
        strong= movies.total_results

      ul
        each m in movies.results
          li
            h2
              a(href=`/pelicula?id=${m.id}`)= m.title

            if m.poster_path
              img(
                src=`https://image.tmdb.org/t/p/w200${m.poster_path}`
                alt=m.title
              )

            if m.release_date
              p
                strong Estreno:
                |  #{m.release_date}

            if typeof m.vote_average !== 'undefined'
              p
                strong Puntuación:
                |  #{m.vote_average} / 10

            if m.overview
              p
                strong Sinopsis:
                |  #{m.overview}
    else
      p No se encontraron películas.

    hr
    if movies
      details
        summary Ver JSON completo de la respuesta
        pre
          = JSON.stringify(movies, null, 2)
